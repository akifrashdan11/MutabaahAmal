<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pdf"
    android:background="@android:color/black">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:src="@drawable/backosang"/>

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/tengah"
        android:layout_height="400dp"
        android:layout_centerInParent="true"/>





    <Button

    android:id="@+id/button1"
        android:textSize="10dp"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_toLeftOf="@+id/tengah"
    android:layout_marginRight="10dp"
    android:background="@drawable/buttonhijau"
    android:padding="10dp"
    android:text="Surah Al-Mulk"
    android:textColor="#ffffff"
    android:layout_above="@id/button3"
    android:layout_marginBottom="30dp"/>

    <Button

        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tengah"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Surah al-Kahfi"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:layout_above="@id/button4"
        android:layout_marginBottom="30dp"/>


    <Button

        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/tengah"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Surah al-Waqi'ah"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_above="@id/button5"
        android:layout_marginBottom="30dp"/>


    <Button

        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tengah"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:textSize="10dp"
        android:text="Surah ar-Rahman"
        android:layout_marginBottom="30dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/button5"/>

    <Button

        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/tengah"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Surah as-Sajadah"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"/>



    <Button

        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tengah"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Surah ad-Dhukhan"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"/>



    <Button

        android:id="@+id/button7"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/tengah"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonhijau"
        android:textSize="10dp"
        android:padding="10dp"
        android:text="Surah Yasin"
        android:textColor="#ffffff"
        android:layout_below="@id/button5"
        android:layout_marginTop="30dp"/>

    <Button

        android:id="@+id/button8"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tengah"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonhijau"
        android:textSize="10dp"

        android:padding="10dp"
        android:text="Wirdul Latif"
        android:textColor="#ffffff"
        android:layout_below="@id/button6"
        android:layout_marginTop="30dp"/>


    <Button

        android:id="@+id/button9"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:layout_toLeftOf="@+id/tengah"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Ratib al-Haddad"
        android:textColor="#ffffff"
        android:layout_below="@id/button7"
        android:layout_marginTop="30dp"/>

    <Button

        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tengah"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Wirid Sakran"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_below="@id/button8"
        android:layout_marginTop="30dp"/>



    <Button

        android:id="@+id/button11"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonhijau"
        android:padding="10dp"
        android:text="Ma'thurat"
        android:textColor="#ffffff"
        android:layout_below="@id/button10"
        android:layout_marginTop="30dp"/>








    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@drawable/buttonhijau"
        app:itemTextColor="@drawable/select"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/select"
        app:menu="@menu/menu_navigation"

        android:layout_above="@+id/bottomtext"
        />

    <RelativeLayout

        android:id="@+id/bottomtext"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/t3"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/t1"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:paddingEnd="10dp"
            android:text="Fadhail"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:text="PDF"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:layout_toLeftOf="@id/t5"
            android:layout_toRightOf="@+id/t1"
            android:text="Update"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:text="Other"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />


    </RelativeLayout>




</RelativeLayout>